<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notes.NoteListFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notes_list"
        android:layout_width="match_parent"
        android:layout_height="617dp"
        app:layout_constraintBottom_toTopOf="@id/add_note"
        tools:itemCount="10"
        tools:layout_editor_absoluteX="2dp"
        tools:listitem="@layout/note_item_layout" />

    <Button
        android:id="@+id/add_note"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_margin="32dp"
        android:text="@string/action_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notes_list" />

</androidx.constraintlayout.widget.ConstraintLayout>